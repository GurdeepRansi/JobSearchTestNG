<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
 
<suite name="TestAll" verbose="1" parallel="tests">
	<test name="Search on Firefox">
	<parameter name = "browser" value="FF"></parameter>
		<classes>
			<class name="com.TestNG.JobSearch.DiceSearch" />
		</classes>
	</test>
	
	<test name="Search on IE">
	<parameter name = "browser" value="IE"></parameter>
		<classes>
			<class name="com.TestNG.JobSearch.DiceSearch" />
		</classes>
	</test>
	
	<test name="Search on Chrome">
	<parameter name = "browser" value="GH"></parameter>
		<classes>
			<class name="com.TestNG.JobSearch.DiceSearch" />
		</classes>
	</test>
	
	<test name = "Run on Firefox browser">
		<classes>
			<class name="com.TestNG.JobSearch.CareerbuilderSearch" />
			<class name="com.TestNG.JobSearch.LinkedInSearch" />
			<class name="com.TestNG.JobSearch.MonsterSearch" />
			<class name="com.TestNG.JobSearch.MonsterSearchTwo" />
		</classes>
	</test>
	
</suite>